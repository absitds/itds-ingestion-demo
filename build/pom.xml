    <build>
		<finalName>${mvn.project.name}-${mvn.project.version}</finalName>
            <plugins>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-dependency-plugin</artifactId>
                    <executions>
                        <execution>
                            <id>copy-dependencies</id>
                            <phase>package</phase>
                            <goals>
                                <goal>copy-dependencies</goal>
                            </goals>
                            <configuration>
                                <outputDirectory>${project.build.directory}/platform-demo
                                </outputDirectory>
                                <includeArtifactIds>platform-demo-flow</includeArtifactIds>
                            </configuration>
                        </execution>
                         <execution>
                            <id>unpack-zip-dependencies</id>
                            <phase>package</phase>
                            <goals>
                                <goal>unpack-dependencies</goal>
                            </goals>
                            <configuration>
                                <includeTypes>zip</includeTypes>
                                <outputDirectory>${project.build.directory}/workflows</outputDirectory>
                                <stripVersion>true</stripVersion>
                            </configuration>
                        </execution>
                        <execution>
                            <id>unpack-dependencies</id>
                            <phase>package</phase>
                            <goals>
                                <goal>unpack-dependencies</goal>
                            </goals>
                            <configuration>
                                <includeTypes>tar.gz</includeTypes>
                                <excludeArtifactIds>platform-demo-flow,shell-functions</excludeArtifactIds>
                                <outputDirectory>${project.build.directory}/platform-demo</outputDirectory>
                                <stripVersion>true</stripVersion>
                            </configuration>
                        </execution>
                    </executions>
                </plugin>
                <plugin>
                    <artifactId>maven-assembly-plugin</artifactId>
                    <executions>
                        <execution>
                            <id>platform-demo-tar-assembly</id>
                            <phase>package</phase>
                            <goals>
                                <goal>single</goal>
                            </goals>
                            <configuration>
                                <appendAssemblyId>false</appendAssemblyId>
                                <descriptors>
                                    <descriptor>
                                        ${multi.module.project.root.dir}/libraries/assembly/src/main/resources/assemblies/platform-demo-tar-assembly.xml
                                    </descriptor>
                                </descriptors>
                                <tarLongFileMode>posix</tarLongFileMode>
                            </configuration>
                        </execution>
                    </executions>
                </plugin>
            </plugins>
	</build>
